<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--        app:layout_constraintBottom_toTopOf="@+id/time"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/food"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/btnchange" />-->

    <Button
        android:id="@+id/Personnel"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="2dp"
        android:background="@color/blue"
        android:text="모집인원"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/food"
        app:layout_constraintTop_toBottomOf="@+id/btnchange" />

    <Button
        android:id="@+id/food"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="3dp"
        android:background="@color/blue"
        android:text="음식카테고리"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/goal"
        app:layout_constraintEnd_toStartOf="@+id/Personnel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <Button
        android:id="@+id/btnchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="2dp"
        android:text="주문자로 전환"
        app:layout_constraintBottom_toTopOf="@+id/Personnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="102dp"
        android:layout_height="22dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="15dp"
        android:text="재은님(참여자)"
        app:layout_constraintBottom_toTopOf="@+id/food"
        app:layout_constraintEnd_toStartOf="@+id/btnchange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goal"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="3dp"
        android:background="@color/blue"
        android:text="모집목적"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food" />

    <Button
        android:id="@+id/time"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="3dp"
        android:background="@color/blue"
        android:text="모집기한"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goal"
        app:layout_constraintTop_toBottomOf="@+id/Personnel" />


    <Button
        android:id="@+id/btn_map"
        android:layout_width="368dp"
        android:layout_height="89dp"
        android:layout_marginBottom="80dp"
        android:background="@color/blue"
        android:backgroundTint="@color/white"
        android:text="지도로 확인하기"
        android:drawablePadding="-60dp"
        android:drawableLeft="@drawable/map"
        android:paddingLeft="30dp"
        android:textColor="#1976D2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_tv"
        app:layout_constraintVertical_bias="0.309" />

    <Button
        android:id="@+id/DetailList"
        android:layout_width="368dp"
        android:layout_height="89dp"
        android:layout_marginBottom="31dp"
        android:background="@color/blue"
        android:backgroundTint="@color/white"
        android:text="상세 목록 확인"
        android:drawableLeft="@drawable/list"
        android:paddingLeft="30dp"
        android:drawablePadding="-60dp"
        android:textColor="#1976D2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_tv"
        app:layout_constraintVertical_bias="0.688" />

    <LinearLayout
        android:id="@+id/ll_tv"
        android:layout_width="368dp"
        android:layout_height="23dp"
        android:layout_marginTop="172dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hashfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#패스트푸드" />

        <TextView
            android:id="@+id/hashper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="#20인" />

        <TextView
            android:id="@+id/hashgoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="#배달비 나눔" />

        <TextView
            android:id="@+id/hashtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="100dp"
            android:text="#17시" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>